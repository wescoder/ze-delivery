{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@ze/*": ["src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["**/node_modules/**/*"]
}
